all: main.o school.o
	${CC} ${OBJ} -o ${NAME}

main.o: main.c
	${CC} -c main.c -o main.o

school.o: school.c main.h
	${CC} -c school.c -o school.o

clean:
	rm -f *~ school

oclean:
	rm -f main.o school.o

fclean: clean
	rm -f main.o school.o

re: oclean all

CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = ${OBJ} ${NAME}
